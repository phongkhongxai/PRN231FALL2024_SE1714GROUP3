@model BusinessObjects.DTO.ResumeDTO

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@Model.Name's Resume</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 20px;
            color: #333;
        }

        h1, h2 {
            color: #004085;
            margin-bottom: 0.5em;
        }

        p {
            margin: 0.5em 0;
        }

        .section {
            margin-bottom: 20px;
        }

            .section h2 {
                border-bottom: 2px solid #004085;
                padding-bottom: 5px;
            }

        .resume-header {
            text-align: center;
            border-bottom: 2px solid #004085;
            padding-bottom: 10px;
            margin-bottom: 20px;
        }

            .resume-header h1 {
                margin: 0;
                font-size: 28px;
            }

        .contact-info p {
            margin: 5px 0;
        }

        .experience, .project, .education, .skills, .certificates {
            margin-bottom: 20px;
        }

        .experience-item, .project-item, .education-item, .skills-item, .certificate-item {
            margin-bottom: 10px;
        }

            .experience-item h3, .project-item h3, .education-item h3, .skills-item h3, .certificate-item h3 {
                margin: 0;
                font-size: 18px;
                font-weight: bold;
            }

            .experience-item p, .project-item p, .education-item p, .skills-item p, .certificate-item p {
                margin: 0.3em 0;
            }

            .experience-item .time, .project-item .time, .education-item .time, .certificate-item .time {
                font-size: 14px;
                color: #555;
            }

        .skills-list {
            display: flex;
            flex-wrap: wrap;
        }

            .skills-list li {
                margin-right: 15px;
                list-style-type: none;
            }

        .more-info {
            margin-top: 20px;
            padding-top: 10px;
            border-top: 1px solid #ccc;
        }
    </style>
</head>
<body>
    <!-- Resume Header Section -->
    <div class="resume-header">
        <h1>@Model.Name</h1>
        <div class="contact-info">
            <p><strong>Phone:</strong> @Model.Phone</p>
            <p><strong>Email:</strong> @Model.Email</p>
            <p><strong>Address:</strong> @Model.Address</p>
        </div>
    </div>

    <!-- Career Goal Section -->
    <div class="section">
        <h2>Career Goal</h2>
        <p>@Model.CareerGoal</p>
    </div>

    <!-- Work Experience Section -->
    <div class="section experience">
        <h2>Work Experience</h2>
        @if (Model.WorkExperience != null && Model.WorkExperience.Any())
        {
            @foreach (var experience in Model.WorkExperience)
            {
                <div class="experience-item">
                    <h3>@experience.NameCompany</h3>
                    <p><strong>Position:</strong> @experience.PositionAtCompany</p>
                    <p class="time">@experience.TimeAtCompany</p>
                    <p>@experience.Description</p>
                </div>
            }
        }
        else
        {
            <p>No work experience available.</p>
        }
    </div>

    <!-- Project Section -->
    <div class="section project">
        <h2>Projects</h2>
        @if (Model.Project != null && Model.Project.Any())
        {
            @foreach (var project in Model.Project)
            {
                <div class="project-item">
                    <h3>@project.NameProject</h3>
                    <p><strong>Position:</strong> @project.PositionInProject</p>
                    <p class="time">@project.TimeAtWork</p>
                    <p><strong>Technologies Used:</strong> @project.TechsUsed</p>
                </div>
            }
        }
        else
        {
            <p>No projects available.</p>
        }
    </div>

    <!-- Education Section -->
    <div class="section education">
        <h2>Education</h2>
        @if (Model.Education != null && Model.Education.Any())
        {
            @foreach (var education in Model.Education)
            {
                <div class="education-item">
                    <h3>@education.NameUniversity</h3>
                    <p><strong>Major:</strong> @education.Major</p>
                    <p class="time">@education.TimeAtLearn</p>
                </div>
            }
        }
        else
        {
            <p>No education details available.</p>
        }
    </div>

    <!-- Skills Section -->
    <div class="section skills">
        <h2>Skills</h2>
        @if (Model.Skills != null && Model.Skills.Any())
        {
            <ul class="skills-list">
                @foreach (var skill in Model.Skills)
                {
                    <li class="skills-item">
                        <h3>@skill.NameSkill</h3>
                        <p>@skill.Description</p>
                    </li>
                }
            </ul>
        }
        else
        {
            <p>No skills available.</p>
        }
    </div>

    <!-- Certificates Section -->
    <div class="section certificates">
        <h2>Awards & Certificates</h2>
        @if (Model.AwardAndCertificate != null && Model.AwardAndCertificate.Any())
        {
            @foreach (var certificate in Model.AwardAndCertificate)
            {
                <div class="certificate-item">
                    <h3>@certificate.Name</h3>
                    <p class="time">@certificate.Time</p>
                </div>
            }
        }
        else
        {
            <p>No certificates available.</p>
        }
    </div>

    <!-- More Information Section -->
    <div class="more-info">
        <p><strong>More Information:</strong> @Model.MoreInfomation</p>
    </div>
</body>
</html>
